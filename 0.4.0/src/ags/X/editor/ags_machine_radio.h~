#ifndef __AGS_MACHINE_RADIO_H__
#define __AGS_MACHINE_RADIO_H__

#include <glib.h>
#include <glib-object.h>

#include <gtk/gtk.h>

#include <ags/audio/ags_audio.h>
#include <ags/audio/ags_notation.h>

#define AGS_TYPE_MACHINE_RADIO                (ags_machine_radio_get_type())
#define AGS_MACHINE_RADIO(obj)                (G_TYPE_CHECK_INSTANCE_CAST((obj), AGS_TYPE_MACHINE_RADIO, AgsMachineRadio))
#define AGS_MACHINE_RADIO_CLASS(class)        (G_TYPE_CHECK_CLASS_CAST((class), AGS_TYPE_MACHINE_RADIO, AgsMachineRadioClass))
#define AGS_IS_MACHINE_RADIO(obj)             (G_TYPE_CHECK_INSTANCE_TYPE ((obj), AGS_TYPE_MACHINE_RADIO))
#define AGS_IS_MACHINE_RADIO_CLASS(class)     (G_TYPE_CHECK_CLASS_TYPE ((class), AGS_TYPE_MACHINE_RADIO))
#define AGS_MACHINE_RADIO_GET_CLASS(obj)      (G_TYPE_INSTANCE_GET_CLASS (obj, AGS_TYPE_MACHINE_RADIO, AgsMachineRadioClass))

typedef struct _AgsMachineRadio AgsMachineRadio;
typedef struct _AgsMachineRadioClass AgsMachineRadioClass;

struct _AgsMachineRadio
{
  GtkVBox vbox;
};

struct _AgsMachineRadioClass
{
  GtkVBoxClass vbox;
};

GType ags_machine_radio_get_type(void);

AgsMachineRadio* ags_machine_radio_new();

#endif /*__AGS_MACHINE_RADIO_H__*/
